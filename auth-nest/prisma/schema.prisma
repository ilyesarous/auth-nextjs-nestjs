generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(CONDIDAT)
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model offers {
  id           Int      @id @default(autoincrement())
  position     Position
  positioname  String
  description  String
  requirements String
  technologies String
  contract     String?
  salary       String?
  skills       String?
  duration     String?
  nbCondidats  Int?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

enum Role {
  INTERN
  CONDIDAT
  ADMIN
}

enum Position {
  INTERNSHIP
  JOB
}
